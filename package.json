{
  "name": "henkan",
  "version": "0.0.1",
  "description": "A Node.JS library that helps you convert any dictionary from EDRDG, transform their entries into more user-friendly schemas and create Anki notes from them.",
  "keywords": [
    "fjsd",
    "japanese",
    "japanese-language",
    "anki-cards",
    "anki-deck",
    "anki",
    "katakana",
    "hiragana",
    "kana",
    "kanji",
    "japanese-grammar",
    "jmdict"
  ],
  "author": {
    "name": "Ronokof",
    "email": "ronokoffjsd@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ronokof/Henkan.git"
  },
  "homepage": "https://github.com/Ronokof/Henkan",
  "bugs": {
    "url": "https://github.com/Ronokof/Henkan/issues",
    "email": "ronokoffjsd@gmail.com"
  },
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "docs/**/*",
    "README.md",
    "LICENSE.md",
    "CONTRIBUTING.md",
    "SECURITY.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc -p tsconfig.types.json",
    "build:cjs": "node ./scripts/build-esbuild.cjs cjs",
    "build:esm": "node ./scripts/build-esbuild.cjs esm",
    "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prepare": "npm run lint && npm run build",
    "docs:api": "typedoc --plugin typedoc-plugin-markdown --out docs/api src/index.ts --readme none --excludePrivate --excludeProtected --excludeNotDocumented --hideGenerator"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.893.0",
    "iconv-lite": "^0.7.0",
    "kuroshiro": "^1.2.0",
    "kuroshiro-analyzer-kuromoji": "^1.1.0",
    "libxmljs2": "^0.37.0",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": ">=22.17.0"
  }
}
