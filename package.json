{
  "name": "henkan",
  "version": "2.4.10",
  "description": "Converter & Simplifier for JMdict, KANJIDIC, KRADFILE2, RADKFILE2 and Tanaka Corpus",
  "keywords": [
    "fjsd",
    "japanese",
    "japanese-language",
    "anki-cards",
    "anki-deck",
    "anki",
    "katakana",
    "hiragana",
    "kana",
    "kanji",
    "japanese-grammar",
    "jmdict",
    "kanjidic2",
    "kradfile2",
    "radkfile2",
    "tanaka-corpus"
  ],
  "author": {
    "name": "Ronokof",
    "email": "ronokoffjsd@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ronokof/Henkan.git"
  },
  "homepage": "https://github.com/Ronokof/Henkan",
  "bugs": {
    "url": "https://github.com/Ronokof/Henkan/issues",
    "email": "ronokoffjsd@gmail.com"
  },
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "docs/**/*",
    "README.md",
    "LICENSE.md",
    "CONTRIBUTING.md",
    "SECURITY.md",
    "tsconfig.json",
    "tsconfig.types.json"
  ],
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage",
    "clean": "rimraf dist",
    "build:types": "tsc -p tsconfig.types.json",
    "build:cjs": "node ./scripts/build-esbuild.cjs cjs",
    "build:esm": "node ./scripts/build-esbuild.cjs esm",
    "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs",
    "lint": "eslint --fix --fix-type problem,suggestion,layout",
    "prepare": "npm run lint && npm run build && npm run docs:api",
    "docs:api": "typedoc --plugin typedoc-plugin-markdown --out docs/api src/index.ts --readme none --excludePrivate --excludeProtected --excludeNotDocumented --hideGenerator --sourceLinkTemplate \"https://github.com/Ronokof/Henkan/blob/{gitRevision}/{path}#L{line}\" --gitRevision main",
    "update:pkgs": "node ./scripts/update-packages.cjs"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.5.0",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@types/xml2js": "^0.4.14",
    "fflate": "^0.8.2",
    "iconv-lite": "^0.7.2",
    "kuroshiro": "^1.2.0",
    "kuroshiro-analyzer-kuromoji": "^1.1.0",
    "libxmljs2": "^0.37.0",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": ">=24.12.0"
  }
}
